<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Assuming white background, adjust if different -->
        </shape>
    </item>
    <item android:top="-2dp" android:right="-2dp" android:left="-2dp">
        <shape>
            <solid android:color="#00000000"/> <!-- Transparent color for the rest of the drawable -->
            <stroke
                android:width="1dp"
                android:color="#FF000000" /> <!-- Color for the bottom border -->
        </shape>
    </item>
</layer-list>
